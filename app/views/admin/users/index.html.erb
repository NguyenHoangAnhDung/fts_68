<% provide :title, t("users-title") %>
<div class="body-container">
  <h1 class="text-center "><%= t ".users-title" %></h1>
  <div class="row">
    <div class="col-md-8">
      <%= render "search_form", q: @q %>
    </div>
    <div class="col-md-4">
    </div>
  </div>
  <div class="row">
    <table class="table table-striped table-condensed">
      <thead>
        <tr class="success">
          <th class="header-table">
            <%= t "order" %>
          </th>
          <th class="header-table">
            <%= User.human_attribute_name "email" %>
          </th>
          <th class="header-table">
            <%= User.human_attribute_name "name" %>
          </th>
          <th class="header-table">
            <%= User.human_attribute_name "chatwork_id" %>
          </th>
          <th class="header-table">
            <%= User.human_attribute_name "created_date" %>
          </th>
          <th class="header-table">
            <%= User.human_attribute_name "role" %>
          </th>
          <th class="header-table">
            <%= t "action" %>
          </th>
        </tr>
      </thead>
      <tbody>
        <% if @users.any? %>
          <%= render @users %>
        <% else %>
          <tr>
            <td colspan="7"><%= t "no-record-found" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row pull-right">
    <%= paginate @users %>
  </div>
</div>

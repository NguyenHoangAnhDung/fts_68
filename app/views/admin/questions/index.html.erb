<% provide :title, t("questions-title") %>
<div class="body-container">
  <h1 class="text-center "><%= t ".manage_questions" %></h1>
  <div class="row">
    <div class="col-md-10">
      <%= render "search_form", q: @q %>
    </div>
    <div class="col-md-2 add-new-block">
      <%= link_to t("new"), new_admin_question_path,
        class: "btn btn-info pull-right" %>
      <a href="<%= admin_questions_path format: "xls", q: params[:q] %>">
        <%= t ".download_xls" %>
      </a>
    </div>
  </div>
  <div class="row">
    <table class="table table-striped table-condensed">
      <thead>
        <tr class="success">
          <th class="header-table">
            <%= t "order" %>
          </th>
          <th class="header-table">
            <%= Subject.human_attribute_name "content" %>
          </th>
          <th class="header-table">
            <%= Subject.human_attribute_name "answer" %>
          </th>
          <th class="header-table">
            <%= Subject.human_attribute_name "subject" %>
          </th>
          <th class="header-table">
            <%= Subject.human_attribute_name "type" %>
          </th>
          <th class="header-table">
            <%= Subject.human_attribute_name "state" %>
          </th>
          <th class="header-table" colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% if @questions_pagenated.any? %>
          <%= render @questions_pagenated %>
        <% else %>
          <tr>
            <td colspan="9"><%= t "no-record-found" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row pull-right">
    <%= paginate @questions_pagenated %>
  </div>
</div>
<div class="modal fade" id="subject-form-modal" tabindex="-1" role="dialog">
</div>

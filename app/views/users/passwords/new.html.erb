<% provide :title, t("forgot_password") %>
<div class="content">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 devise">
      <h1 class="title"><%= t "forgot_password" %></h1>
      <%= form_for(resource, as: resource_name,
        url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>
        <div class="actions">
          <%= f.submit t("forgot_password_submit"), class: "btn btn-primary" %>
        </div>
      <% end %>
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>

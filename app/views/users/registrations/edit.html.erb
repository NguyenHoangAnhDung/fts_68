<% provide :title, t("edit_user") %>
<div class="content">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 devise">
      <h1 class="title"><%= t "edit_user" %></h1>
      <%= form_for resource, as: resource_name,
        url: registration_path(resource_name), html: {method: :put} do |f| %>
        <%= devise_error_messages! %>
        <div class="field">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>
        <div class="field">
          <%= f.label :chatworkId, t("chat_word_id") %><br />
          <%= f.text_field :chatwork_id, autofocus: true,
            class: "form-control" %>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div><%= t "message_email" %>
            <%= resource.unconfirmed_email %>
          </div>
        <% end %>
        <div class="field">
          <%= f.label :password %> <i><% t "message_password" %></i><br />
          <%= f.password_field :password, autocomplete: "off",
            class: "form-control" %>
        </div>
        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off",
            class: "form-control"%>
        </div>
        <div class="field">
          <%= f.label :current_password %>
          <i><% t "message_current" %></i><br />
          <%= f.password_field :current_password, autocomplete: "off",
            class: "form-control"%>
        </div>
        <div class="actions">
          <span class="col-md-4 pull-right btn-update-delete button">
            <%= f.submit "Update", class: "btn btn-primary" %>
          </span>
        </div>
      <% end %>
      <div class="col-md-4 pull-left btn-update-delete button" >
        <%= button_to t("Delete_account"),
          registration_path(resource_name),
          data: {confirm: t("sure_message")},
          method: :delete, class: "btn btn-danger"%>
      </div>
    </div>
  </div>
</div>
